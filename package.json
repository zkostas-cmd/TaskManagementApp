{
  "name": "task-management-app",
  "version": "1.0.0",
  "description": "A modern task management application built with MERN stack",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
